<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.fragment.acd.Holiday">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_holday"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c7d9db"
        android:textStyle="bold"
        android:text="> display holiday-table  9" />

        <TextView
            android:id="@+id/txt_holi"
            android:layout_below="@+id/txt_holday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="21dp"
            android:text="HOLIDAY TABLE" />
        <TextView
            android:id="@+id/txt_hol"
            android:layout_below="@+id/txt_holi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="9dp"
            android:text="Number :  9             Name:  Test" />



        <TextView
            android:id="@+id/txt_start"
            android:layout_below="@+id/txt_hol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="21dp"
            android:text="________START__________        __________END__________" />

        <TextView
            android:id="@+id/txt_month"
            android:layout_below="@+id/txt_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="10dp"
            android:text="Month   Day   Hour   Min            Month   Day   Hour   Min" />


        <TextView
            android:id="@+id/txt_day"
            android:layout_below="@+id/txt_month"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="#795548"
            android:layout_marginTop="5dp"
            android:text="01       12       09      10                01        13       09      25" />

        <TextView
            android:id="@+id/txt_hrs"
            android:layout_below="@+id/txt_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="#795548"
            android:layout_marginTop="5dp"
            android:text="03       19       06      19                03        20       10      02" />


        <TextView
            android:id="@+id/txt_min"
            android:layout_below="@+id/txt_hrs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="#795548"
            android:layout_marginTop="5dp"
            android:text="05       06       12      06                07        21       12      45" />

        <TextView
            android:id="@+id/txt_minn"
            android:layout_below="@+id/txt_min"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="#795548"
            android:layout_marginTop="5dp"
            android:text="10       21       02      10                10        22       22      03" />

        <TextView
            android:id="@+id/txt_minu"
            android:layout_below="@+id/txt_minn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="#795548"
            android:layout_marginTop="5dp"
            android:text="06       19       03      10                07        19       04      15" />

        <TextView
            android:id="@+id/txt_minut"
            android:layout_below="@+id/txt_minu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="#795548"
            android:layout_marginTop="5dp"
            android:text="12       12       12      10                12        12       23      30" />



        <TextView
            android:id="@+id/txt_holy"
            android:layout_below="@+id/txt_minut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="If you want to do any change in holiday table refer below commands in ACD." />

        <TextView
            android:id="@+id/txt_disphr"
            android:layout_below="@+id/txt_holy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="5dp"
            android:text="->" />

        <TextView
            android:id="@+id/txt_disph"
            android:layout_below="@+id/txt_holy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="5dp"
            android:textColor="#795548"
            android:layout_marginTop="5dp"
            android:text="display holiday-table   9" />


        <TextView
            android:id="@+id/txt_diaro"
            android:layout_below="@+id/txt_disph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="5dp"
            android:text="->" />

        <TextView
            android:id="@+id/txt_disphro"
            android:layout_below="@+id/txt_disph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="5dp"
            android:textColor="#795548"
            android:layout_marginTop="5dp"
            android:text="change holiday-table   9" />

        <TextView
            android:id="@+id/txt_di"
            android:layout_below="@+id/txt_disphro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="5dp"
            android:text="->" />

        <TextView
            android:id="@+id/txt_dir"
            android:layout_below="@+id/txt_disphro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="5dp"
            android:textColor="#795548"
            android:layout_marginTop="5dp"
            android:text="list holiday-table   " />

        <TextView
            android:id="@+id/txt_diu"
            android:layout_below="@+id/txt_dir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="15dp"
            android:text="->" />

        <TextView
            android:id="@+id/txt_diru"
            android:layout_below="@+id/txt_dir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="15dp"
            android:text="You can implement Holiday table as per client requirement." />

    </RelativeLayout>

</ScrollView>
