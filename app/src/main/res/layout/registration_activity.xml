<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="91dp"
        android:text="Full Name" />

    <EditText
        android:id="@+id/edt_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_fullname"
        android:layout_alignStart="@+id/txt_fullname"
        android:layout_below="@+id/txt_fullname"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txt_mobileno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_fullname"
        android:layout_alignStart="@+id/edt_fullname"
        android:layout_below="@+id/edt_fullname"
        android:layout_marginTop="15dp"
        android:text="Mobile Number" />

    <EditText
        android:id="@+id/edt_mobileno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edt_fullname"
        android:layout_alignRight="@+id/edt_fullname"
        android:layout_below="@+id/txt_mobileno"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_mobileno"
        android:layout_alignStart="@+id/edt_mobileno"
        android:layout_below="@+id/edt_mobileno"
        android:layout_marginTop="24dp"
        android:text="Email" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edt_mobileno"
        android:layout_alignRight="@+id/edt_mobileno"
        android:layout_below="@+id/txt_email"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/txt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_email"
        android:layout_alignStart="@+id/edt_email"
        android:layout_below="@+id/edt_email"
        android:layout_marginTop="19dp"
        android:text="Password" />

    <Button
        android:id="@+id/btn_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_password"
        android:layout_alignStart="@+id/txt_password"
        android:layout_below="@+id/txt_password"
        android:layout_marginTop="26dp"
        android:text="REGISTRATION HERE...!" />
</RelativeLayout>