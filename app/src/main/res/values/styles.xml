<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--This style is for all text sizes -->
    <style name="MasterTVParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--This style is for all text margin -->
    <style name="MasterTmargin" parent="MasterTVParent">
        <item name="android:layout_marginTop">5dp</item>
        <item name="layout_marginStart">25dp</item>
        <item name="android:layout_marginLeft">5dp</item>

    </style>

    <!--This style is for all commands with green color -->
    <style name="MasterTVParentM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#c7d9db</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--This style is for all commands arrows -->
    <style name="MasterTvarrow" parent="MasterTVParent">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_marginStart">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:text">-></item>
    </style>
    <!--This style is for all commands arrows without bold-->
    <style name="MastersTvarrow" parent="MasterTVParent">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="layout_marginStart">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:text">-></item>
    </style>

    <!--This style is for 7 layer buttons for SIP-->
    <style name="MasterBtnAllLayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:background">@drawable/rounded</item>

    </style>
    <!--This style is for Gol buttons for SIP-->
    <style name="MasterBtnSip">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:background">@drawable/gollbtn</item>
    </style>


    <!--This style is for  right side buttons for SIP-->
    <style name="MasterBtnAllLayerRightSide">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">245dp</item>
        <item name="android:background">@drawable/rounded</item>

    </style>

    <!--This style is for Gol right side buttons for SIP-->
    <style name="MasterBtnSipRightSide">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">328dp</item>
        <item name="android:background">@drawable/gollbtn</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
